#include <stdio.h>
#include <sleep.h>
#include <time.h>
#include <unistd.h>
#include <math.h>
#include <stdlib.h>

#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"
#include "xgpio.h"
#include "xstatus.h"
#include "Delay.h"
#include "LCD_SPI.h"
#include "LCD_Driver.h"
#include "LCD_GUI.h"
#include "ADC.h"
#include "I2C.h"

#include "maze_game.h"
#include "maze_gui.h"
#include "Accelerometer.h"

#include "interrupts.h"
#include "game_config.h"
#include "LightSensor.h"
#include "tetris_player.h"

// --- CONFIGURACIÓN IP AUDIO ---
// Asegúrate de que esta dirección coincide con Address Editor en Vivado
#ifndef MY_PWM_BASEADDR
#define MY_PWM_BASEADDR  XPAR_BUZZERBOOSTER_DRIVER_0_S00_AXI_BASEADDR
#endif

// --- VARIABLES EXTERNAS ---
// Traemos la variable de conteo desde interrupts.c manualmente por si el .h falló
extern volatile u32 debug_isr_count;

extern TetrisPlayer myTetris;
extern XGpio gpio0;
extern XSpi  SpiInstance;
extern XSpi  SpiInstance1;

#define LOOP_DELAY_MS        40
#define MOVE_COOLDOWN_TICKS  5
#define TILT_THRESHOLD       0.25f

// Macro para imprimir floats (parte entera.parte decimal)
#define PRINT_FLOAT(val) (int)(val), (int)(abs((int)((val)*100.0f)) % 100)

int main()
{
    init_platform();
    xil_printf("\r\n--- INICIO SISTEMA v5 (FINAL FIX) ---\r\n");

    // 1. Inicializar Periféricos Base (GPIO, SPI, I2C, ADC)
    XGpio_Initialize(&gpio0, XPAR_AXI_GPIO_0_DEVICE_ID);
    XSpi_Init(&SpiInstance, SPI_DEVICE_ID);
    init_adc(&SpiInstance1, SPI_DEVICE_ID_1);
    init_IIC();

    // 2. Inicializar Objeto Música (IMPORTANTE: Antes de activar Timers)
    // Esto prepara la estructura en memoria para que la interrupción no lea basura.
    Tetris_Init(&myTetris, MY_PWM_BASEADDR);

    // 3. Inicializar Sistema de Interrupciones
    xil_printf("Activando interrupciones...\r\n");
    int Status = AO2_InitInterruptSystem();
    if (Status != XST_SUCCESS) {
        xil_printf("FALLO CRITICO: No se iniciaron las interrupciones.\r\n");
    }

    // 4. Inicializar Pantalla
    LCD_Init(SCAN_DIR_DFT);
    LCD_Clear(BLACK);
    GUI_DisString_EN(10, 50, "SISTEMA VIVO", &Font16, BLACK, WHITE);

    // Pequeña pausa para asegurar que el usuario ve el mensaje
    usleep(500000);

    // 5. Configuración por UART
    LCD_Clear(BLACK);
    GUI_DisString_EN(5, 40, "CONFIGURAR EN", &Font12, BLACK, YELLOW);
    GUI_DisString_EN(5, 60, "CONSOLA...", &Font12, BLACK, YELLOW);

    GameConfig cfg;
    GameConfig_ReadUART(&cfg);
    GameHardware_Init(&cfg);

    if (cfg.audio_enabled) {
        xil_printf("Musica ON.\r\n");
        Tetris_TogglePlay(&myTetris);
    }

    // 6. Calibración (Solo si se usa acelerómetro)
    Accelerometer acc;
    Accelerometer_init(&acc);

    if (cfg.inputMode == 1) {
        LCD_Clear(BLACK);
        GUI_DisString_EN(10, 50, "CALIBRANDO...", &Font12, BLACK, CYAN);
        Accelerometer_calibrate(&acc, 50);
    }

    // 7. Inicializar Juego
    GameState game;
    Maze_InitLevel1(&game);
    GUI_ResetDrawState();

    int   themeMode   = LIGHT_MODE_DAY;
    COLOR playerColor = YELLOW;

    LCD_Clear(WHITE);
    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);

    // 8. Bucle Principal
    int currentLevel = 1;
    int pendingLevelChange = 0;
    int moveCooldown = 0;

    int debug_counter = 0;
    u32 last_isr_count = 0;

    xil_printf("Entrando al bucle principal...\r\n");

    while (1)
    {
        // --- DIAGNÓSTICO (Heartbeat) ---
        debug_counter++;
        if (debug_counter >= 25) { // Cada ~1 segundo (25 * 40ms)
            // Calculamos cuántas interrupciones ocurrieron en el último segundo
            u32 diff = debug_isr_count - last_isr_count;
            last_isr_count = debug_isr_count;

            xil_printf("[DEBUG] Loop OK. INTs/seg: %u\r\n", (unsigned int)diff);

            if (diff == 0) {
                xil_printf("  -> ALERTA: Las interrupciones no están corriendo!\r\n");
            }
            debug_counter = 0;
        }

        // A. Sensor Luz (La interrupción pone la flag en 1)
        if (cfg.light_mode_auto && ao2_light_flag)
        {
            ao2_light_flag = 0;
            int luz = XGpio_DiscreteRead(&ALightGpio, LIGHT_GPIO_CHANNEL);
            xil_printf("[LUZ] Interrupcion detectada. Valor GPIO: %d\r\n", luz);

            if (luz == 0) {
                if (themeMode != LIGHT_MODE_NIGHT) {
                    LCD_Clear(BLACK);
                    themeMode = LIGHT_MODE_NIGHT;
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                }
            } else {
                if (themeMode != LIGHT_MODE_DAY) {
                    LCD_Clear(WHITE);
                    themeMode = LIGHT_MODE_DAY;
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                }
            }
        }

        // B. Leer Controles
        char dir = 0;

        if (cfg.inputMode == 1) // Acelerómetro
        {
            // LEEMOS DIRECTAMENTE (Seguro, sin conflicto SPI)
            float gx = raw_to_g(read_acx());
            float gy = raw_to_g(read_acy());

            float mvx = Accelerometer_to_movement(&acc, gy);
            float mvy = Accelerometer_to_movement(&acc, gx);

            if (fabsf(mvy) > fabsf(mvx)) {
                if (mvy > TILT_THRESHOLD) dir = 'd';
                else if (mvy < -TILT_THRESHOLD) dir = 'u';
            } else {
                if (mvx > TILT_THRESHOLD) dir = 'r';
                else if (mvx < -TILT_THRESHOLD) dir = 'l';
            }
        }
        else // Joystick
        {
            // LEEMOS DIRECTAMENTE
            int joy_x = read_joyx();
            int joy_y = read_joyy();

            if (joy_y > 2600) dir = 'u';
            if (joy_y < 1500) dir = 'd';
            if (joy_x > 2600) dir = 'r';
            if (joy_x < 1500) dir = 'l';
        }

        if (moveCooldown > 0) moveCooldown--;

        // C. Actualizar Juego (Sincronizado con Timer 1 ~50ms)
        if (ao2_game_tick == 1)
        {
            ao2_game_tick = 0;

            if (dir != 0 && moveCooldown == 0 && Game_HasFinished(&game) == GAME_RUNNING)
            {
                int result = Game_TryMove(&game, dir);
                if (result != MOVE_INVALID) {
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                    moveCooldown = MOVE_COOLDOWN_TICKS;
                }
            }
        }

        // D. Verificar Ganar/Perder
        int state = Game_HasFinished(&game);

        if (state == GAME_WIN)
        {
             if (pendingLevelChange == 0) {
                GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                pendingLevelChange = 50;
            } else if (--pendingLevelChange == 1) {
                if (currentLevel == 1) {
                    currentLevel = 2;
                    Maze_InitLevel2(&game);
                    GUI_ResetDrawState();
                    LCD_Clear(themeMode == LIGHT_MODE_DAY ? WHITE : BLACK);
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                } else {
                    LCD_Clear(BLACK);
                    GUI_DisString_EN(10, 60, "VICTORIA!", &Font12, BLACK, GREEN);
                    if(cfg.audio_enabled) Tetris_TogglePlay(&myTetris);
                    while(1) usleep(100000);
                }
            }
        } else if (state == GAME_LOSE) {
             if (pendingLevelChange == 0) {
                GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                pendingLevelChange = 50;
            } else if (--pendingLevelChange == 1) {
                LCD_Clear(BLACK);
                GUI_DisString_EN(10, 60, "GAME OVER", &Font12, BLACK, RED);
                if(cfg.audio_enabled) Tetris_TogglePlay(&myTetris);
                while(1) usleep(100000);
            }
        }

        // Usamos usleep en lugar de delay_ms para evitar bloqueos por timers
        usleep(40000); // 40ms
    }

    return 0;
}
