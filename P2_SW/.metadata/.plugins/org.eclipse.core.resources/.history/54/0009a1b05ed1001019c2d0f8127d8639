#include <stdio.h>
#include <sleep.h>
#include <time.h>
#include <unistd.h>
#include <math.h>
#include <stdlib.h> // Para abs/labs si es necesario

#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"
#include "xgpio.h"
#include "xstatus.h"
#include "Delay.h"
#include "LCD_SPI.h"
#include "LCD_Driver.h"
#include "LCD_GUI.h"
#include "ADC.h"
#include "I2C.h"

#include "maze_game.h"
#include "maze_gui.h"
#include "Accelerometer.h"

#include "interrupts.h"
#include "game_config.h"
#include "LightSensor.h"

// Asegúrate que este include coincida con el nombre de archivo que tienes (tetris_player.h o song.h)
#include "tetris_player.h"

// !!! IMPORTANTE !!!
// Dirección base del IP Core del Buzzer
#ifndef MY_PWM_BASEADDR
#define MY_PWM_BASEADDR  XPAR_BUZZERBOOSTER_DRIVER_0_S00_AXI_BASEADDR
#endif

// Instancia global del reproductor (Referenciada externamente en interrupts.c)
TetrisPlayer myTetris;

// Instancias globales de hardware
extern XGpio gpio0;
extern XSpi  SpiInstance;
extern XSpi  SpiInstance1;

#define LOOP_DELAY_MS        40
#define MOVE_COOLDOWN_TICKS  5
#define TILT_THRESHOLD       0.25f

int main()
{
    int Status;

    init_platform();
    xil_printf("\r\n--- INICIO SISTEMA ---\r\n");

    /* --------------------------------------------------------------------------
     * 1. INICIALIZACIÓN DE PERIFÉRICOS BASE (GPIO, SPI, I2C, ADC)
     * -------------------------------------------------------------------------- */
    Status = XGpio_Initialize(&gpio0, XPAR_AXI_GPIO_0_DEVICE_ID);
    if (Status != XST_SUCCESS) { xil_printf("Fallo GPIO\r\n"); return XST_FAILURE; }

    Status = XSpi_Init(&SpiInstance, SPI_DEVICE_ID); // SPI LCD
    if (Status != XST_SUCCESS) { xil_printf("Fallo SPI LCD\r\n"); return XST_FAILURE; }

    Status = init_adc(&SpiInstance1, SPI_DEVICE_ID_1); // ADC / XADC
    if (Status != XST_SUCCESS) { xil_printf("Fallo ADC\r\n"); return XST_FAILURE; }

    Status = init_IIC(); // I2C
    if (Status != XST_SUCCESS) { xil_printf("Fallo I2C\r\n"); return XST_FAILURE; }

    /* --------------------------------------------------------------------------
     * 2. INICIALIZACIÓN PANTALLA (LCD) - ¡ANTES DE CUALQUIER BLOQUEO!
     * -------------------------------------------------------------------------- */
    xil_printf("Iniciando LCD...\r\n");
    LCD_Init(SCAN_DIR_DFT);
    LCD_Clear(BLACK);

    // Mostramos mensaje visual para que sepas que el sistema vive
    GUI_DisString_EN(10, 50, "INICIANDO...", &Font16, BLACK, WHITE);
    delay_ms(500);

    /* --------------------------------------------------------------------------
     * 3. CONFIGURACIÓN (UART)
     * -------------------------------------------------------------------------- */
    LCD_Clear(BLACK);
    GUI_DisString_EN(5, 40, "CONFIGURACION", &Font12, BLACK, YELLOW);
    GUI_DisString_EN(5, 60, "REVISE CONSOLA", &Font12, BLACK, YELLOW);
    GUI_DisString_EN(5, 80, "UART...", &Font12, BLACK, WHITE);

    // Aquí el programa se detendrá esperando tu input en la terminal Serial
    GameConfig cfg;
    GameConfig_ReadUART(&cfg);

    // Aplicar configuración hardware
    GameHardware_Init(&cfg);

    /* --------------------------------------------------------------------------
     * 4. INICIALIZACIÓN AUDIO (TETRIS)
     * -------------------------------------------------------------------------- */
    Tetris_Init(&myTetris, MY_PWM_BASEADDR);
    if (cfg.audio_enabled) {
        Tetris_TogglePlay(&myTetris);
    }

    /* --------------------------------------------------------------------------
     * 5. INICIALIZACIÓN SENSORES Y CALIBRACIÓN
     * -------------------------------------------------------------------------- */
    // Acelerómetro
    Accelerometer acc;
    Accelerometer_init(&acc);

    if (cfg.inputMode == 1) { // Si usa acelerómetro, calibramos
        LCD_Clear(BLACK);
        GUI_DisString_EN(10, 50, "CALIBRANDO...", &Font12, BLACK, CYAN);
        GUI_DisString_EN(10, 70, "NO MOVER!", &Font12, BLACK, RED);
        Accelerometer_calibrate(&acc, 50); // Toma ~250ms
    }

    /* --------------------------------------------------------------------------
     * 6. INICIALIZACIÓN DE JUEGO
     * -------------------------------------------------------------------------- */
    LCD_Clear(BLACK);
    // Intro visual opcional
    // GUI_INTRO();
    // delay_ms(500);
    // LCD_Clear(GUI_BACKGROUND);

    GameState game;
    Maze_InitLevel1(&game); // Carga laberinto
    GUI_ResetDrawState();

    int   themeMode   = LIGHT_MODE_DAY;
    COLOR playerColor = YELLOW;

    // Dibujado inicial
    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);

    /* --------------------------------------------------------------------------
     * 7. INICIO DE SISTEMA DE INTERRUPCIONES
     * -------------------------------------------------------------------------- */
    // Iniciamos interrupciones AL FINAL, cuando todo el hardware ya está listo.
    Status = AO2_InitInterruptSystem();
    if (Status != XST_SUCCESS) xil_printf("Error iniciando interrupciones\r\n");

    /* --------------------------------------------------------------------------
     * 8. BUCLE PRINCIPAL (GAME LOOP)
     * -------------------------------------------------------------------------- */
    int currentLevel = 1;
    int pendingLevelChange = 0;
    int moveCooldown = 0;

    while (1)
    {
        // --- A. Verificar interrupción de sensor de luz ---
        if (cfg.light_mode_auto && ao2_light_flag)
        {
            ao2_light_flag = 0; // Limpiar flag
            int luz = XGpio_DiscreteRead(&ALightGpio, LIGHT_GPIO_CHANNEL);

            // Cambiar tema según nivel del pin (ajustar 0/1 según tu sensor)
            if (luz == 0) {
                if (themeMode != LIGHT_MODE_NIGHT) {
                    LCD_Clear(BLACK);
                    themeMode = LIGHT_MODE_NIGHT;
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                }
            } else {
                if (themeMode != LIGHT_MODE_DAY) {
                    LCD_Clear(WHITE);
                    themeMode = LIGHT_MODE_DAY;
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                }
            }
        }

        // --- B. Leer Controles ---
        char dir = 0;
        if (cfg.inputMode == 1) // Acelerómetro (Valores actualizados en Timer0_ISR)
        {
            // Usamos las variables globales volátiles
            float gx = ao2_gx; // Leído en interrupción
            float gy = ao2_gy;

            // Convertir gravedad a movimiento
            float mvx = Accelerometer_to_movement(&acc, gy);
            float mvy = Accelerometer_to_movement(&acc, gx);

            // Lógica de inclinación (ejes invertidos según orientación típica Zybo)
            if (fabsf(mvy) > fabsf(mvx)) {
                if (mvy > TILT_THRESHOLD) dir = 'd';
                else if (mvy < -TILT_THRESHOLD) dir = 'u';
            } else {
                if (mvx > TILT_THRESHOLD) dir = 'r';
                else if (mvx < -TILT_THRESHOLD) dir = 'l';
            }
        }
        else // Joystick
        {
            // Lectura polling del joystick (o usar variables de ISR si las tienes)
            int joy_x = read_joyx();
            int joy_y = read_joyy();

            if (joy_y > 2600) dir = 'u';
            if (joy_y < 1500) dir = 'd';
            if (joy_x > 2600) dir = 'r';
            if (joy_x < 1500) dir = 'l';
        }

        if (moveCooldown > 0) moveCooldown--;

        // --- C. Actualizar Juego (Sincronizado con Timer1 ISR ~50ms) ---
        if (ao2_game_tick == 1)
        {
            ao2_game_tick = 0; // Consumir tick

            if (dir != 0 && moveCooldown == 0 && Game_HasFinished(&game) == GAME_RUNNING)
            {
                int result = Game_TryMove(&game, dir);
                if (result != MOVE_INVALID) {
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                    moveCooldown = MOVE_COOLDOWN_TICKS;
                }
            }
        }

        // --- D. Verificar Estado (Ganar/Perder) ---
        int state = Game_HasFinished(&game);

        if (state == GAME_WIN)
        {
            if (pendingLevelChange == 0) {
                GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                pendingLevelChange = 50;
            }
            else if (--pendingLevelChange == 1) {
                if (currentLevel == 1) {
                    currentLevel = 2;
                    Maze_InitLevel2(&game);
                    GUI_ResetDrawState();
                    LCD_Clear(themeMode == LIGHT_MODE_DAY ? WHITE : BLACK);
                    GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                } else {
                    LCD_Clear(BLACK);
                    GUI_DisString_EN(10, 60, "VICTORIA TOTAL", &Font12, BLACK, GREEN);
                    if(cfg.audio_enabled) Tetris_TogglePlay(&myTetris); // Stop música
                    while (1) delay_ms(100);
                }
            }
        }
        else if (state == GAME_LOSE)
        {
            if (pendingLevelChange == 0) {
                GUI_DrawMazeAndPlayer(&game, themeMode, playerColor);
                pendingLevelChange = 50;
            }
            else if (--pendingLevelChange == 1) {
                LCD_Clear(BLACK);
                GUI_DisString_EN(10, 60, "JUEGO TERMINADO", &Font12, BLACK, RED);
                if(cfg.audio_enabled) Tetris_TogglePlay(&myTetris); // Stop música
                while (1) delay_ms(100);
            }
        }

        delay_ms(LOOP_DELAY_MS);
    }

    return 0;
}
