#ifndef TEMP_SENSOR_H
#define TEMP_SENSOR_H

#include "LCD_GUI.h" // Necesario para el tipo COLOR

typedef struct {
    int current_temp;  // Temperatura en grados Celsius (entero)
    COLOR player_color; // Color para el GUI
} TempSensor;

void TempSensor_init(TempSensor *ts);
void TempSensor_update(TempSensor *ts);

#endif
