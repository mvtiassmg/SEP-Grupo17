#ifndef SONGS_H
#define SONGS_H
#include <stdint.h>

typedef struct { uint32_t tick; uint8_t leds; } Event; /*EDD que guarda el tiempo en que se muestra la secuencia de leds*/
typedef struct { const Event* ev; uint32_t len; } SongRef; /*Puntero hacia la canción y su duración*/

/* Tempo de las canciones  */
#define BEAT_MS 200u
#define T(n)    ((uint32_t)((n) * BEAT_MS)) /*se define el tiempo en el que saldrá la nota*/

/* Declaraciones */
extern const Event song0[];
extern const uint32_t song0_len;
extern const Event song1[];
extern const uint32_t song1_len;
extern const Event song2[];
extern const uint32_t song2_len;
extern const Event song3[];
extern const uint32_t song3_len;

/* Tabla de acceso cómoda */
extern const SongRef g_songs[];
extern const uint32_t g_songs_count;

#endif /* SONGS_H */
